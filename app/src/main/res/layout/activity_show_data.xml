<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_light"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tablelayout">


    <TableRow
        android:background="#607D8B"
        android:padding="11dp"
        android:id="@+id/tablerow">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_weight="1"
            android:text="Medicine Name" />
        <TextView
            android:id="@+id/txtMedicine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20dp"
            android:text="Napa" />
    </TableRow>
    <TableRow
        android:background="#b8d1be"
        android:padding="11dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textColor="@android:color/black"
            android:layout_weight="1"
            android:text="Starting Date" />
        <TextView
            android:id="@+id/txtStartingDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@android:color/black"
            android:textSize="12dp"
            android:text="21-7-2017" />
    </TableRow>
    <TableRow
        android:background="#98a7c6"
        android:padding="11dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12dp"
            android:textColor="@android:color/black"
            android:text="Days" />

        <TextView
            android:id="@+id/txtDays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12dp"
            android:textColor="@android:color/black"
            android:text="30" />
    </TableRow>

    <TableRow
        android:background="#ECEFF1"
        android:padding="11dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12dp"

            android:textColor="@android:color/black"
            android:text="Hourly" />
        <TextView
            android:id="@+id/txtHourlyDose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textColor="@android:color/black"
            android:layout_weight="0.1"
            android:text="0" />
        <TextView
            android:id="@+id/txtHourlyTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="12dp"
            android:textColor="@android:color/black"
            android:text="12:30" />
    </TableRow>


    <TableRow
        android:background="@android:color/holo_blue_light"
        android:padding="11dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12dp"
            android:textColor="@android:color/black"
            android:text="Morning" />
        <TextView
            android:id="@+id/txtMorningDose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textColor="@android:color/black"
            android:layout_weight="0.1"
            android:text="1" />
        <TextView
            android:id="@+id/txtMorningTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="12dp"
            android:textColor="@android:color/black"
            android:text="12:30" />
    </TableRow>

    <TableRow
        android:background="#ECEFF1"
        android:padding="11dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12dp"

            android:textColor="@android:color/black"
            android:text="Noon" />
        <TextView
            android:id="@+id/txtNoonDose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textColor="@android:color/black"
            android:layout_weight="0.1"
            android:text="0" />
        <TextView
            android:id="@+id/txtNoonTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="12dp"
            android:textColor="@android:color/black"
            android:text="12:30" />
    </TableRow>

    <TableRow
        android:background="@android:color/holo_blue_light"
        android:padding="11dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12dp"
            android:textColor="@android:color/black"
            android:text="Afternoon" />
        <TextView
            android:id="@+id/txtAfternoonDose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textColor="@android:color/black"
            android:layout_weight="0.1"
            android:text="1" />
        <TextView
            android:id="@+id/txtAfternoonTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="12dp"
            android:textColor="@android:color/black"
            android:text="12:30" />
    </TableRow>
    <TableRow
        android:background="#ECEFF1"
        android:padding="11dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12dp"

            android:textColor="@android:color/black"
            android:text="Night" />
        <TextView
            android:id="@+id/txtNightDose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textColor="@android:color/black"
            android:layout_weight="0.1"
            android:text="0" />
        <TextView
            android:id="@+id/txtNightTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="12dp"
            android:textColor="@android:color/black"
            android:text="12:30" />
    </TableRow>

    <TableRow
        android:background="@android:color/holo_blue_light"
        android:padding="12dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12dp"
            android:textColor="@android:color/black"
            android:text="Before Meal" />
        <TextView
            android:id="@+id/txtBeforeMeal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
           android:layout_weight="1"
            android:text="YES" />

    </TableRow>

    <TableRow
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECEFF1"
    android:padding="11dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="After Meal"
        android:textColor="@android:color/black"
        android:textSize="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="NO"
        android:textColor="@android:color/black"
        android:textSize="12dp"
        android:id="@+id/txtAfterMeal"/>



</TableRow>


    <TableRow

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/holo_blue_light"
        android:padding="11dp"
        >

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/btnEdit"
            android:layout_width="15dp"
            android:layout_height="45dp"

            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginBottom="40dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            fancy:fb_borderColor="#f4d282"
            fancy:fb_borderWidth="3dp"
            fancy:fb_defaultColor="#bfc9d1"
            fancy:fb_focusColor="#97f7ec"
            fancy:fb_iconPosition="right"

            fancy:fb_radius="20dp"
            fancy:fb_text="Edit"
            fancy:fb_textColor="#121111"
            fancy:fb_textSize="18dp" />

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/btnNext"
            android:layout_width="15dp"
            android:layout_height="45dp"

            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginBottom="40dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            fancy:fb_borderColor="#f4d282"
            fancy:fb_borderWidth="3dp"
            fancy:fb_defaultColor="#bfc9d1"
            fancy:fb_focusColor="#97f7ec"
            fancy:fb_iconPosition="right"

            fancy:fb_radius="20dp"
            fancy:fb_text="Next"
            fancy:fb_textColor="#121111"
            fancy:fb_textSize="18dp" />
    </TableRow>


</TableLayout>
