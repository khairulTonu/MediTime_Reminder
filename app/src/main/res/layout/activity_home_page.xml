<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/woodenshelf"
    android:fitsSystemWindows="true" tools:openDrawer="start"
    >


    <LinearLayout

        android:paddingTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:background="@drawable/btn_shadow"
                android:src = "@drawable/camera"
                android:scaleType="centerInside"
                android:id="@+id/btnCamera"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                />
            <ImageButton
                android:layout_marginTop="70dp"
                android:id="@+id/btnMenually"
                android:background="@drawable/btn_shadow"
                android:src = "@drawable/setmenually"
                android:scaleType="centerInside"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"/>


            <ImageButton
                android:id="@+id/btnNoon"
                android:layout_marginTop="70dp"
                android:background="@drawable/btn_shadow"
                android:src = "@drawable/noon"
                android:scaleType="centerInside"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"/>


        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:background="@drawable/btn_shadow"
                android:src = "@drawable/mngschedule2"
                android:scaleType="centerInside"
                android:id="@+id/btnEdit"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                />
            <ImageButton
                android:id="@+id/btnMorning"
                android:layout_marginTop="70dp"
                android:background="@drawable/btn_shadow"
                android:src = "@drawable/morning"
                android:scaleType="centerInside"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"/>

            <ImageButton
                android:id="@+id/btnNight"
                android:layout_marginTop="70dp"
                android:background="@drawable/btn_shadow"
                android:src = "@drawable/night"
                android:scaleType="centerInside"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"/>

        </LinearLayout>


    </LinearLayout>

    <include layout="@layout/app_bar_main" android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.design.widget.NavigationView android:id="@+id/nav_view"
        android:layout_width="wrap_content" android:layout_height="match_parent"
        android:layout_gravity="start" android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_main" app:menu="@menu/activity_main_drawer" />

</android.support.v4.widget.DrawerLayout>
